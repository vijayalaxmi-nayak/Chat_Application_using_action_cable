<div class="jumbtron">
    <h1 style="text-align:center">Chat App</h1>
    <div class="well" id="chatbox" style="height:250px; solid 1px #222222; overflow-y: scroll" >

        <% @messages.each do |message| %>
            <%= render 'messages/message', message: message %>
        <% end %>
    </div>
    
    <% if current_user %>

        <%= form_with model: @message do |f| %>
            <div class="input-group mb-3">
                <%= f.text_field :body, placeholder: "Say something...", class: "form-control" %>
                <div class="imput-group-append">
                    <%= f.submit "Send", class:"btn btn-secondary" %>
                </div>
            </div>
        <% end %>

    <% else style="text-align:center" %>
            You need to be <%= link_to "Signed In", new_user_session_path %> in order to chat!
    <% end %>
</div>